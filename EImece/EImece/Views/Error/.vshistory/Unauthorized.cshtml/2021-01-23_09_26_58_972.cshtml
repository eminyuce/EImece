@model  EImece.Domain.Models.HelperModels.ErrorModel

@{
    ViewBag.Title = "Unauthorized";
    ViewBag.Description = "Sorry, but the page requires authentication.";
}

<div class="jumbotron text-center">
    <header>
        <h1><span aria-hidden="true" class="fa fa-ban text-danger"></span> @ViewBag.Title</h1>
    </header>
    <p>@ViewBag.Description</p>
    <a class="btn btn-primary btn-lg" href="@Url.Action("Index","Home")">
        <span aria-hidden="true" class="fa fa-home"></span>@Resource.ContinueShopping
    </a>
</div>