@model  EImece.Domain.Models.HelperModels.ErrorModel

@{
    ViewBag.Title = "Page Not Found";
    ViewBag.Description = "Sorry, but the page you were looking for can’t be found.";
}

<div class="jumbotron text-center">
    <header>
        <h1><span aria-hidden="true" class="fa fa-exclamation-circle text-danger"></span> @ViewBag.Title</h1>
    </header>
    <p>@ViewBag.Description</p>
    <a class="btn btn-primary btn-lg" href="@Url.Action("Index","Home")"><span aria-hidden="true" class="fa fa-home"></span> Take me home</a>
</div>