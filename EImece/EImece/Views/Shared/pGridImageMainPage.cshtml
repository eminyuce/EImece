@model  BaseContent
@using EImece.Domain.Helpers;
@using EImece.Domain;
@using Resources;
@using EImece.Domain.Helpers.Extensions;
@using EImece.Domain.Entities;
<b>
    @{
        var d = Model;
        FileStorage f = d.MainImage;
        var gridMainPageImageText = AdminResource.GridMainPageImageText;
        var gridMainNoPageImageText = AdminResource.GridNoMainPageImageText;
    }

    @if (d.MainImageId > 0 && f != null)
    {
        <button type="button" class="btn btn-info btn-sm" data-toggle="modal" data-target="@String.Format("#myModal_{0}",d.MainImageId)">@gridMainPageImageText</button>
        @Html.Partial("pImagePopUp", f);
    }
    else
    {
        <b>
            @gridMainNoPageImageText
        </b>
    }

</b>