@using EImece.Domain.Entities;
@using EImece.Domain.Factories;
@{
    Subscriber subscriber = new Subscriber();
}

@using (Html.BeginForm("AddSubscriber", "Home", FormMethod.Get))
{




    @Html.HiddenFor(model => subscriber.IsActive)

    <div class="form-group">
        @Html.LabelFor(model => subscriber.Name)
        <div class="col-md-10">
            @Html.TextBoxFor(model => subscriber.Name, new { @placeholder = "Name", @class = "newsletter" })
            @Html.ValidationMessageFor(model => subscriber.Name)
        </div>
    </div>


        <div class="form-group">
            @Html.LabelFor(model => subscriber.Email)
            <div class="col-md-10">
                @Html.TextBoxFor(model => subscriber.Email, new { @placeholder = "Email", @class = "newsletter" })
                @Html.ValidationMessageFor(model => subscriber.Email)
            </div>
        </div>


        <button class="newsletter-btn" type="submit">Join</button>

}
