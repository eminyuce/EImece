@using EImece.Domain.Entities;
@using EImece.Domain.Helpers;
@using EImece.Domain.Helpers.Extensions;
@model  List<SelectListItem>
@{
    var listItems = Model;
    var  selectedClass= "text-light font-size-sm opacity-75 py-1 pl-0 pr-2 border-right border-light"
}

@if (listItems.Count() > 1)
{
    foreach (var item in listItems)
    {
        @Html.ActionLink(item.Text, "Language", "Home", new { id = item.Value }, new { @class = item.Selected ? "selectedLang" : "" })
    }
}