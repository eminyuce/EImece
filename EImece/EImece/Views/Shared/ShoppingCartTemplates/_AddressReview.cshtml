@using EImece.Domain.Models.FrontModels;
@using EImece.Domain.Entities;
@using EImece.Domain.Helpers.HtmlHelpers;
@using EImece.Domain.Helpers.Extensions;
@using EImece.Domain.Helpers;
@using EImece.Domain;
@using Resources;
@model  ShoppingCartSession
@{
    var products = Model.ShoppingCartItems;
    var customer = Model.Customer;
    var billingAddress = Model.BillingAddress;
}

<div class="four columns alpha">
    <ul class="address-review">
        @if (!string.IsNullOrEmpty(customer.Company))
        {
            <li>@customer.Company</li>
        }
        <li>@billingAddress.Description</li>
        <li>@billingAddress.ZipCode</li>
        <li>@billingAddress.City</li>
        <li>@billingAddress.Country</li>
    </ul>
</div>
<div class="custom-control custom-checkbox">
    <input class="custom-control-input" type="checkbox" checked="">
    @Html.LabelFor(model => customer.IsSameAsShippingAddress, new { @class = "custom-control-label" })
</div>
<div class="clearfix"></div>