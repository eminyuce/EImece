@using EImece.Domain.Models.FrontModels;
@using EImece.Domain.Entities;
@using EImece.Domain.Helpers.HtmlHelpers;
@using EImece.Domain.Helpers.Extensions;
@using EImece.Domain.Helpers;
@using EImece.Domain;
@using Resources;
@model Order

<div class="container">
    <!-- Order Information Section -->
    <div class="card mb-4">
        <div class="card-header">
            <h5>Order Information</h5>
        </div>
        <div class="card-body">
            <p><strong>Order Number:</strong> @Model.OrderNumber</p>
            <p><strong>Shipment Tracking Number:</strong> @Model.ShipmentTrackingNumber</p>
            <p><strong>Shipment Company:</strong> @Model.ShipmentCompanyName</p>
            <p><strong>Status:</strong> @Model.Status</p>
            <p><strong>Price:</strong> @Model.PaidPrice @Model.Currency</p>
            <p><strong>Delivery Date:</strong> @Model.DeliveryDate.ToString("MMMM dd, yyyy")</p>
            <p><strong>Payment Status:</strong> @Model.PaymentStatus</p>
            <p><strong>Admin Order Note:</strong> @Model.AdminOrderNote</p>
            <p><strong>Order Comments:</strong> @Model.OrderComments</p>
        </div>
    </div>


    <!-- Installment & Payment Info Section -->
    <div class="card mb-4">
        <div class="card-header">
            <h5>Installment & Payment Information</h5>
        </div>
        <div class="card-body">
            <p><strong>Installment:</strong> @Model.InstallmentDescription</p>
            <p><strong>Paid Price:</strong> @Model.PaidPrice @Model.Currency</p>
            <p><strong>Card Type:</strong> @Model.CardType</p>
            <p><strong>Card Last 4 Digits:</strong> @Model.LastFourDigits</p>
        </div>
    </div>

    <!-- Order Products Section -->
    @if (Model.OrderProducts != null && Model.OrderProducts.Any())
    {
        <div class="card mb-4">
            <div class="card-header">
                <h5>Order Products</h5>
            </div>
            <div class="card-body">
                <ul class="list-group">
                    @foreach (var product in Model.OrderProducts)
                    {
                        <li class="list-group-item">
                            <strong>Product Name:</strong> @product.ProductName <br />
                            <strong>Quantity:</strong> @product.Quantity <br />
                            <strong>Price:</strong> @product.Price @Model.Currency
                        </li>
                    }
                </ul>
            </div>
        </div>
    }


</div>


