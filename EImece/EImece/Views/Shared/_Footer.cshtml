@using Resources;
@using EImece.Domain.Helpers.Extensions;
@using EImece.Domain;
@using EImece.Domain.Helpers;
@using EImece.Domain.Models.FrontModels;
@model FooterViewModel
@{
    var footerModel = Model;
    var isUserAuthenticated = User.Identity.IsAuthenticated && Settings.IsEditLinkEnable;

}
<!-- Container -->
<div class="container">

    <div class="four columns">

        @Html.Partial("_WebSiteLogo",
       Model.FooterLogo,
       new ViewDataDictionary(ViewData){
            {"isThumb","true"}})

        <p class="margin-top-15">

            @Html.Raw(Model.FooterDescription.SettingValue)
        </p>
    </div>

    <div class="four columns">

        <!-- Headline -->
        <h3 class="headline footer">@Resource.Pages</h3>
        <span class="line"></span>
        <div class="clearfix"></div>

        <ul class="footer-links">
            @foreach (var m in Model.Menus)
            {

                <li>
                    @Html.Partial("_NavigationMenuLink", m)
                </li>
            }

            @*<li>
                 @Html.ActionLink(Resource.PrivacyPolicy, "PrivacyPolicy", "Home")
                 </li>
                 <li>
                     @Html.ActionLink(Resource.TermsAndConditions, "TermsAndConditions", "Home")
                </li>*@
        </ul>

    </div>

    <div class="four columns">
        <!-- Headline -->
        <h3 class="headline footer">@Resource.Products</h3>
        <span class="line"></span>
        <div class="clearfix"></div>
        <ul class="footer-links">
            @foreach (var m in Model.ProductCategories)
            {
                <li>
                    @Html.ActionLink(m.Name, "Category", "ProductCategories", new { id = m.GetSeoUrl() }, new { @class = "" })
                </li>
            }
        </ul>
    </div>
    <div class="four columns">

        <!-- Headline -->
        <h3 class="headline footer">@Resource.EmailList</h3>
        <span class="line"></span>
        <div class="clearfix"></div>
        <p>

            @Html.Raw(Model.FooterEmailListDescription.SettingValue)



        </p>

        <form action="#" method="get">
            @Html.Partial("_AddSubscriber")
        </form>
    </div>

</div>
@Html.Partial("_LoginPartial")