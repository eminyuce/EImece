﻿@model EImece.Domain.Models.DTOs.FileStorageDto
@using EImece.Domain.Helpers.Extensions;
@{var f=Model; int Width=ViewData["Width"].ToInt(0); int Height=ViewData["Height"].ToInt(0); var img=Url.Action("Index","Images",new{id=string.Format("{0}.jpg",f.Id),imageSize=string.Format("w{0}h{1}",Width,Height)});} 
@if (f.IsActive){<div class="one-third column portfolio-item media post-@f.Id portfolio type-portfolio status-publish has-post-thumbnail hentry" id="post-@f.Id" style="position: absolute; left: 320px; top: 0px;"><figure><div class="portfolio-holder"><img src="@img" alt="@f.Name"/><div class="hover-icon"></div></div></figure></div>}