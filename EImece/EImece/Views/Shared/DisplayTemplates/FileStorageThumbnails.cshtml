﻿@model EImece.Domain.Models.DTOs.FileStorageDto
@using EImece.Domain.Helpers.Extensions;
@{var f=Model; int Width=ViewData["Width"].ToInt(0); int Height=ViewData["Height"].ToInt(0); var large=Url.Action("Index","Images",new{id=string.Format("{0}.jpg",f.Id),imageSize="w0h0"}); var small=Url.Action("Index","Images",new{id=string.Format("{0}.jpg",f.Id),imageSize=string.Format("w{0}h{1}",Width,Height)});} 
@if (f.IsActive){<a href="@large" class="gallery-item mb-grid-gutter" data-fancybox=@string.Format("gallery{0}",f.Id) data-options='{"caption": "Gallery image caption #1"}'><img src="@small" class="img-thumbnail rounded" style="max-height:@Height; max-width:@Width" alt="Gallery image"><div class="gallery-caption"><div class="gallery-indicator"><i class="gallery-indicator-icon" data-feather="zoom-in"></i></div></div></a>}