﻿@model EImece.Domain.Models.DTOs.StoryDto
@using Resources;
@{var s=Model;}
<div class="container mt-4"><div class="row justify-content-center"><div class="col-md-12"><div class="card shadow-sm"><div class="card-body"><div class="row"><div class="col-md-4 text-center"><a href="@s.DetailPageUrl" class="text-dark"><img src="@Url.Action("Index","Images",new{id=string.Format("{0}.jpg",s.MainImageId ?? 0),imageSize="w400h300"})" alt="@s.Name"/></a></div><div class="col-md-8"><h5 class="card-title mb-1"><a href="@s.DetailPageUrl" class="text-dark">@s.Name</a></h5><p class="text-muted"><small>@s.UpdatedDate.ToShortDateString()</small></p><p class="card-text mt-2">@Html.Raw(s.ShortDescription)</p><p><a href="@s.DetailPageUrl" class="text-dark">@Resource.ReadMore</a></p></div></div></div></div></div></div></div>