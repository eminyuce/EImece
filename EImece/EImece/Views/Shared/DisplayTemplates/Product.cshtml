@model EImece.Domain.Entities.Product
 @{ 
     var productFiles = Model.ProductFiles;

 }

Product Files : @Model.ProductFiles.Count()
<div>
    <dl class="dl-horizontal">
        <h5>
            Product Category: @Model.ProductCategory.Name
        </h5>
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        @foreach(var productFile in productFiles)
        {
            <div>
                @productFile.Name  @productFile.Position
            </div>
        }
    </dl>
</div>
 