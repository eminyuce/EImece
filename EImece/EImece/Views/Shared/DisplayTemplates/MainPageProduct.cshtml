@model EImece.Domain.Entities.Product
@using EImece.Domain.Helpers.Extensions;
@using EImece.Domain.Helpers;
@{
    var productFiles = Model.ProductFiles;
    var product = Model;
    var categoryName = GeneralHelper.GetUrlSeoString(product.ProductCategory.Name);

}
<div class="main-page-product">
    <div class="panel panel-default">
        <a href="@product.GetDetailPageUrl("detail", "products",categoryName)">
            @Html.Raw(product.GetCroppedImageTag(300, 300))
        </a>
     
        <div class="panel-body">            
            <h4>@Html.ActionLink(product.Name, "detail", "products", new { categoryName = categoryName, id = product.GetSeoUrl() }, null)</h4>
        </div>
        <div class="panel-footer">
            <strong> @product.ProductCategory.Name</strong>
      
        </div>
        <p>
            @product.GetSeoDescription(300)
        </p>
    </div>
</div>
 