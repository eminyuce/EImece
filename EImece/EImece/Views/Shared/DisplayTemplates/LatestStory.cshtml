@model EImece.Domain.Entities.Story
@using EImece.Domain.Helpers.Extensions;

@{
    var story = Model;
    var storyDetailUrl = story.GetDetailPageUrl("Detail", "Stories", story.StoryCategory.Name);
}




<div class="four columns">
    <article class="from-the-blog">
        <figure class="from-the-blog-image">
            <a href="@storyDetailUrl">
                @Html.Raw(story.GetThumpImageTag())
            </a>
            <div class="hover-icon"></div>
        </figure>
        <section class="from-the-blog-content">
            <a href="@storyDetailUrl">
            <h5>@story.Name</h5>
                <i>
                    @story.StoryCategory.Name
                </i>
            </a>
            <i>@story.UpdatedDate</i>
            <span>@story.GetSeoDescription(50) </span>
            <a class="button gray" href="@storyDetailUrl">
                Read More
            </a>
        </section>
    </article>
</div>
