﻿@model EImece.Domain.Models.DTOs.StoryDto
@using Resources;
@{var s=Model;}
<article class="post"><figure class="post-img"><a href="@s.DetailPageUrl"><img src="@Url.Action("Index","Images",new{id=string.Format("{0}.jpg",s.MainImageId ?? 0),imageSize="w400h300"})" alt="@s.Name"/></a></figure><section class="date"><span class="day">@s.CreatedDate.Day</span><span class="month">@s.CreatedDate.ToString("MMM")</span></section><section class="post-content"><header class="meta"><h2><a href="@s.DetailPageUrl">@s.Name</a></h2></header><p>@Html.Raw(s.ShortDescription)</p><a href="@s.DetailPageUrl" class="button color">@Resource.ReadMore</a></section></article>