@model EImece.Domain.Entities.Story
@using EImece.Domain.Helpers.Extensions;
@using EImece.Domain.Helpers.Extensions;
@using EImece.Domain.Helpers;
@using EImece.Domain;
@using Resources;

@{
    var story = Model;
    var categoryName = story.StoryCategory.Name;
    var isUserAuthenticated = User.Identity.IsAuthenticated && Settings.IsEditLinkEnable;
    var tags = story.StoryTags.Select(r1 => r1.Tag).Distinct().ToList();
}


 


<article class="post">

    <figure class="post-img">
         
        <a href="@story.GetDetailPageUrl("Detail","Stories")">
            @Html.Raw(story.GetCroppedImageTag(300, 250))
        </a>
    </figure>

    <section class="date">
        <span class="day">@story.CreatedDate.Value.Day</span>
        <span class="month">@story.CreatedDate.Value.ToString("MMM")</span>
    </section>

    <section class="post-content">

        <header class="meta">
            <h2><a href="@story.GetDetailPageUrl("Detail","Stories")">
                
                @story.Name</a>
                @if (isUserAuthenticated)
                {
                    @Html.ActionLink("edit", "saveoredit", "stories", new { @id = story.Id, @area = "admin" }, new { @class="adminPageLink" })
                }
            </h2>
            <span><i class="fa fa-tag"></i>
            
                @for (int i = 0; i < tags.Count; i++)
                {
                    var tag = tags[i];
                    <a href="#">@tag.Name</a>
                }



            </span>
        </header>

        <p>
            @story.GetSeoDescription(300)

        </p>

        <a href="@story.GetDetailPageUrl("Detail","Stories")" class="button color">Read More</a>

    </section>

</article>
