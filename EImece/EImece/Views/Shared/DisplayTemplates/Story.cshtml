﻿@model EImece.Domain.Models.DTOs.StoryDto
@using Resources;
@{var s=Model;}
<article class="card mb-4 shadow-sm border-0"><div class="row no-gutters"><div class="col-md-4"><a href="@s.DetailPageUrl" class="d-block"><img src="@Url.Action("Index","Images",new{id=string.Format("{0}.jpg",s.MainImageId ?? 0),imageSize="w400h300"})" alt="@s.Name"/></a></div><div class="col-md-8"><div class="card-body"><h5 class="card-title"><a href="@s.DetailPageUrl" class="text-dark">@s.Name</a></h5><p class="card-text">@Html.Raw(s.ShortDescription)</p><a href="@s.DetailPageUrl" class="btn btn-primary btn-sm mt-2">@Resource.ReadMore</a></div></div></div></article>