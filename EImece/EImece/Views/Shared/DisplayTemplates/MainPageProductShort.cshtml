@model EImece.Domain.Entities.Product
@using EImece.Domain.Helpers.Extensions;
@using EImece.Domain.Helpers;
@using EImece.Domain;
@using Resources;
@{
    var productFiles = Model.ProductFiles;
    var product = Model;
    var categoryName = product.ProductCategory.Name;
    var isUserAuthenticated = User.Identity.IsAuthenticated && ApplicationConfigs.IsEditLinkEnable;
    int Width = ViewData["Width"].ToInt(0);
    int Height = ViewData["Height"].ToInt(0);
    var imageTag = product.GetCroppedImageTag(Width, Height);
}

<li>
    <a href="@product.GetDetailPageUrl("Detail", "Products", categoryName, ApplicationConfigs.HttpProtocol)">
        @Html.Raw(imageTag)
        <div class="product-list-desc">@product.Name
            @if (isUserAuthenticated)
            {
                @Html.ActionLink(Resource.AdminEdit, "saveoredit", "Products", new { @id = product.Id, @area = "admin" }, new { @class = "adminPageLink" })
            }
        <i></i></div>
    </a>
</li>