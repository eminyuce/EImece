﻿@model EImece.Domain.Models.DTOs.ProductDto
@using EImece.Domain.Helpers.Extensions;
@{
    var product = Model;
    int Width = ViewData["Width"].ToInt(0);
    int Height = ViewData["Height"].ToInt(0);
    var imageUrl = Url.Action("Index", "Images", new { id = string.Format("{0}.jpg", product.MainImageId ?? 0), imageSize = string.Format("w{0}h{1}", Width, Height) });
}
<div class="media">
  <a class="featured-entry-thumb" href="@product.DetailPageRelativeUrl"><img src="@imageUrl" alt="@product.Name" /></a>
  <div class="media-body"><h6 class="featured-entry-title"><a href="@product.DetailPageRelativeUrl">@product.Name</a></h6><p class="featured-entry-meta">@product.PriceWithDiscount.CurrencySign()</p></div>
</div>