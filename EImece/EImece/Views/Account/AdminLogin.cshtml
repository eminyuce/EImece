@using EImece.Models
@model LoginViewModel
@using Resources;
@{
    ViewBag.Title = "Log in";
    Layout = null;
}

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<script src="~/Scripts/bootstrap.min.js"></script>
<script src="~/Scripts/jquery-3.5.1.min.js"></script>
<!------ Include the above in your HEAD tag ---------->
<body style="background-color:black;">
    <div class="container">
        <div id="loginbox" style="margin-top:50px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <div class="panel-title">@Resource.AdminPanelLoginPage</div>
                    <div style="float:right; font-size: 80%; position: relative; top:-10px"><a href="#">@Html.ActionLink(@Resource.LostYourPassword, "ForgotPassword")</a></div>
                </div>
                <div style="padding-top:30px" class="panel-body">

                    @using (Html.BeginForm("AdminLogin", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "login", role = "form" }))
                    {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "alert alert-success" })
                    <div style="margin-bottom: 25px" class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = @AdminResource.Email, @id = "login-username" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    </div>

                    <div style="margin-bottom: 5px" class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = @AdminResource.Password, @id = "login-password" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>
                    <div class="input-group">
                        <div class="checkbox">
                            <label>
                                @Html.CheckBoxFor(m => m.RememberMe)    @AdminResource.RememberMe
                            </label>
                        </div>
                    </div>

                    <div class="input-group">
                        @Html.LabelFor(model => model.Captcha)
                        <img width="180" height="50" rel="nofollow" src="@Url.Action("GetCaptcha", "Images", new { prefix = "AdminLogin" })" alt="Captcha" />
                        @Html.TextBoxFor(model => model.Captcha, new { @class = "form-control", @placeholder = "Security Question Answer...", @autocomplete = "false" })
                        @Html.ValidationMessageFor(model => model.Captcha)
                    </div>
                    <br />
                    <div class="form-group">
                        <div class="col-md-offset-1 col-md-10">
                            <input type="submit" value="@AdminResource.Login" class="btn btn-info btn-block" />
                        </div>
                    </div>
                    }
                </div>
            </div>
        </div>
    </div>
</body>