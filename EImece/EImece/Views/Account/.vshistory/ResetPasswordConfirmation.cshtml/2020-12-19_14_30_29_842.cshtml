@using Resources;
@{
    ViewBag.Title = @Resource.ResetPasswordConfirmation;
}

<div class="container pb-5 mb-sm-4">
    <div class="row justify-content-center pt-5">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <h2>@Resource.ResetPasswordConfirmation</h2>
                    <!-- Login -->
                    <p style="color:black">
                        @Resource.ResetPasswordConfirmationText  <br />
                        @Html.ActionLink(Resource.ClickHereToLogin, "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
