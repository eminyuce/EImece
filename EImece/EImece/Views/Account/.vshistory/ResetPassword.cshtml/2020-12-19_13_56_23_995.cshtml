@model EImece.Models.ResetPasswordViewModel
@using Resources;
@{
    ViewBag.Title = "ResetPassword";
}

<div class="container pb-5 mb-sm-4">
    <div class="row pt-5">
        <div class="col-md-2 pt-sm-3">
        </div>
        <div class="col-md-8 pt-5 pt-sm-3">
            <h2 class="h4 mb-1">@Resource.ResetPassword</h2>
            <p class="text-muted mb-4">Kayıt işlemi bir dakikadan az sürer ancak siparişleriniz üzerinde tam kontrol sahibi olmanızı sağlar.</p>
            @Html.ValidationSummary(true, "", new { @class = "alert alert-success" })
            <p class="text-danger  mb-4">  @AdminResource.PasswordInfoMessage</p>
            @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary("", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Code)

                <p class="form-row form-row-wide">
                    @Html.LabelFor(model => model.Email)
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                </p>
                <p class="form-row form-row-wide">
                    @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                </p>
                <p class="form-row form-row-wide">
                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                </p>
 

                <div class="text-right">
                    <input type="submit" value="@Resource.Recover" class="btn btn-block btn-outline-warning" />
                </div>

            }
        </div>
    </div>
</div>


<br />
