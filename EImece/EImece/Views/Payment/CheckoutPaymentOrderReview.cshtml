@using EImece.Domain.Models.FrontModels;
@using EImece.Domain.Entities;
@using EImece.Domain.Helpers.HtmlHelpers;
@using EImece.Domain.Helpers.Extensions;
@using EImece.Domain.Helpers;
@using EImece.Domain;
@using Resources;
@model  ShoppingCartSession

@{
    ViewBag.Title = "CheckoutPaymentOrderReview";
    var products = Model.ShoppingCartItems;
}

<section class="titlebar">
    <div class="container">
        <div class="sixteen columns">
            <h2>Checkout</h2>

            <nav id="breadcrumbs">
                <ul>
                    <li><a href="#">Home</a></li>
                    <li><a href="#">Shop</a></li>
                    <li><a href="#">Checkout</a></li>
                    <li>Payment &amp; Order Review</li>
                </ul>
            </nav>
        </div>
    </div>
</section>

<div class="container">

    <div class="eight columns">

        <!-- Checkout Content -->
        <a href="@Url.Action("CheckoutBillingDetails")"><div class="checkout-section"><span>1</span> Billing Details <strong><i class="fa fa-edit"></i>@Resource.Edit</strong> </div></a>
        <div class="checkout-content">
            @Html.Partial("ShoppingCartTemplates/_AddressReview", Model)
        </div>

        <a href="@Url.Action("CheckoutDelivery")"><div class="checkout-section"><span>2</span> Delivery <strong><i class="fa fa-edit"></i>@Resource.Edit</strong> </div></a>

        <a href="@Url.Action("PlaceOrder")" class="continue button color">@Resource.PlaceOrder</a>
    </div>
    <!-- Checkout Content / End -->
    <!-- Checkout Cart -->
    <div class="eight columns">
        @Html.Partial("ShoppingCartTemplates/_ShoppingCartProducts", Model)
    </div>
    <!-- Checkout Cart / End -->
</div>