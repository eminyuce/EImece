@model EImece.Domain.Entities.Subscriber
@using Resources
@{
    ViewBag.Title = Resource.ThanksForSubscription;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Page Content-->
<div class="container pb-5 mb-sm-4">
    <div class="row pt-4 mt-2">
        <!-- Content-->
        <div class="col-md-12">
            <div class="row">
                <div class="col-xl-9 col-md-8">
                    @Model.Email

                    <div class="card-body text-center">
                        <h3 class="h4 pb-3">@Resource.ThanksForSubscription</h3>
                        <p class="mb-2">Siparişiniz verildi ve mümkün olan en kısa sürede işleme alınacak.</p>
                        <p class="mb-2">Sipariş numaranızı not ettiğinizden emin olun. <strong> {0} </strong></p>
                        <p>Kısa süre içinde siparişinizin onaylandığı bir e-posta alacaksınız.</p>
                        <a class="btn btn-secondary mt-3 mr-3" href="{1}">Alışverişe geri dön</a>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
