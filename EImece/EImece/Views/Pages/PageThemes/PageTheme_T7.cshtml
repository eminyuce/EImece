@model Menu
@using EImece.Domain.Entities
@using EImece.Domain.Helpers.Extensions;

@{
    var menu = Model;
    var files = menu.MenuFiles;
    ViewBag.Title = menu.GetSeoTitle();
    ViewBag.Description = menu.GetSeoDescription();
}

<!-- Page Content -->
<div class="container">

    <!-- Portfolio Item Heading -->
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                @menu.Name
            </h1>
        </div>
    </div>



    @for (int i = 0; i < files.Count; i++)
    {
        var f = files[i];
        bool renderRow = i % 4 == 0 ? true : false;

        if (renderRow)
        {
            @: <div class="row">
                }

        if (i == 0)
        {

        }

        <div class="col-lg-3 col-md-4 col-xs-6 thumb">
            <a href="#">
                @Html.Raw(f.GetCroppedImageTag(f.FileStorageId, 200, 150))
            </a>
        </div>

        if (renderRow)
        {

            @:        </div>
        }
    }


</div>


