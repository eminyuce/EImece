@model Menu
@using EImece.Domain.Models.FrontModels;
@using EImece.Domain.Entities
@using EImece.Domain.Helpers.Extensions;

@{
    var menu = Model;
    var files = menu.MenuFiles.ToList();
    ViewBag.Title = menu.GetSeoTitle();
    ViewBag.Description = menu.GetSeoDescription();

}

<h2>@menu.Name
   
    </h2>


<!-- Page Content -->
<div class="container">

    <!-- Jumbotron Header -->
    <header class="jumbotron hero-spacer">
        @Html.Raw(menu.GetCroppedImageTag(400, 250))
    </header>

    <hr>

    <!-- Title -->
    <div class="row">
        <div class="col-lg-12">
            <p>
                @Html.Raw(menu.Description)
            </p>
        </div>
    </div>



    @for (int i = 0; i < files.Count; i++)
    {
        var f = files[i];
        bool renderRow = i % 4 == 0 ? true : false;

        if (renderRow)
        {
            @: <div class="row  text-center">
                }

        <div class="col-md-3 col-sm-6 hero-feature">
            <div class="thumbnail">
                @Html.Raw(f.GetCroppedImageTag(f.FileStorageId, 70, 70))
                <div class="caption">

                </div>
            </div>
        </div>

        if (renderRow)
        {
            @:   </div>
        }
    }


</div>




