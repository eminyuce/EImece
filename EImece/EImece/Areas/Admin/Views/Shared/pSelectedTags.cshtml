@using EImece.Domain.Entities;
@model  List<TagCategory>
@{
    var tagCategories = Model;
    var selectedTags = (List<int>)TempData["selectedTags"];
}
@foreach (TagCategory tagCategory in tagCategories)
{
    <h3>
        @tagCategory.Name
    </h3>
    foreach (var tag in tagCategory.Tags)
    {
        <div class="checkbox checkbox-danger">

            <input id="@String.Format("checkbox{0}",tag.Id)"  name="tags"  @String.Format("{0}", selectedTags.Any(t => t == tag.Id) ? "checked='checked'" : "") class="styled" data-image-tag="@tag.Id" value="@tag.Id" type="checkbox">

            <label for="@String.Format("checkbox{0}",tag.Id)">

                @tag.Name

            </label>

        </div>



    }
}
<div class="checkbox checkbox-danger">
    <input class="styled"   id="MainPage1" name="MainPage1" type="checkbox" value="true">
 
    <label for="MainPage1">MainPage</label>
</div>