@using EImece.Domain.Entities
@using EImece.Domain.Helpers.Extensions;
@using EImece.Domain;
@using Resources;
@using EImece.Domain.Helpers;
@model  Product

@{
    var baseContent = Model;
    int Width = ViewData["Width"].ToInt(150);
    int Height = ViewData["Height"].ToInt(0);
}

@if (!string.IsNullOrEmpty(baseContent.Name))
{
    <dt>
        @Html.DisplayNameFor(model => model.Name)
    </dt>

    <dd>
        @Html.DisplayFor(model => baseContent.Name)
    </dd>
}


<span class="searchItemTitle">
   
    <br>
    @Html.DisplayFor(model => baseContent.NameLong)
    <br>
    @Html.DisplayFor(model => baseContent.ProductCode)
</span>