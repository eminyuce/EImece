@model Order
@using EImece.Domain.Helpers;
@using GridMvc.Html
@using GridMvc.Sorting
@using EImece.Domain;
@using EImece.Domain.Entities;
@using Resources;
@using EImece.Domain.Helpers.Extensions;
@{
    var order = Model;
    var orderProducts = Model.OrderProducts;
}
<section class="order-details">

    <h3 class="order-details__title">@AdminResource.OrderDetails</h3>
    <table class="table table-striped table-bordered">

        <thead>
            <tr>
                <th class="table__product-name product-name">@AdminResource.Product</th>
                <th class="table__product-name product-name">@AdminResource.Quantity</th>
                <th class="table__product-table product-total">@AdminResource.TotalPrice</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var orderProduct in orderProducts)
            {
            <tr class="table__line-item order_item">
                <td class="table__product-name product-name">
                    <a href="@orderProduct.Product.Name">@orderProduct.Product.Name</a>
                </td>
                <td class="table__product-name product-name">
                    <strong class="product-quantity">× @orderProduct.Quantity</strong>
                </td>
                <td class="table__product-total product-total">
                    <span class="Price-amount amount">
                        @orderProduct.TotalPrice.CurrencySign()
                    </span>
                </td>
            </tr>
            }
        </tbody>

        <tfoot>

            <tr>
                <th scope="row">@AdminResource.TotalPrice</th>
                <td>
                    <span class="Price-amount amount">
                        @order.Price.ToDouble().CurrencySign()
                    </span>
                </td>
            </tr>
        </tfoot>
    </table>

    <section class="customer-details">

        <h2>@AdminResource.CustomerDetail</h2>

        @Html.DisplayFor(r=>order.Customer, "CustomerOrderDetail")
        <h3 class="column__title">@AdminResource.BillingAddress</h3>
        <address>
            @order.BillingAddress.Description
        </address>
        <h3 class="column__title">@AdminResource.ShippingAddress</h3>
        <address>
            @order.ShippingAddress.Description
        </address>
    </section>
</section>