@using EImece.Domain.Helpers;
@using EImece.Domain.Entities;
@model List<BaseContent>

@{
    ViewBag.Title = "SearchContent";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var searchKey = (String)ViewBag.SearchKey;
    var searchList = Model;
}


<div class="row">
    <div class="panel panel-default">
        <div class="bootstrap-admin-panel-content">
            <h2>Admin Search Result For @searchKey</h2>

            @if (Model.Any())
            {
                <h4>Search Result Total Items:@searchList.Count</h4>
                for (int i = 0; i < searchList.Count; i++)
                {
                    var baseContent = searchList[i];
                    @Html.DisplayFor(item => baseContent, "BaseContentSearchItem")

                }
            }

        </div>

    </div>
</div>
