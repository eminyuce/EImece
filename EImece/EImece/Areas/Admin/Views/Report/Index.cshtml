@{
    ViewBag.Title = "Reports Dashboard";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<style>
    .nav-form {
        display: inline-block;
        margin: 0;
        padding: 0;
    }

        .nav-form .btn-link {
            padding: 15px;
            color: #777;
            display: block;
            text-decoration: none;
            background: none;
            border: none;
            text-align: left;
            width: 100%;
        }

            .nav-form .btn-link:hover,
            .nav-form .btn-link:focus {
                color: #333;
                background-color: transparent;
                text-decoration: none;
            }

    .navbar-nav > li > .nav-form > .btn-link {
        padding-top: 15px;
        padding-bottom: 15px;
        line-height: 20px;
    }
</style>

<div class="container">
    <div class="navbar-header">
        @Html.ActionLink("Reports Dashboard", "Index", "Report", new { area = "Admin" }, new { @class = "navbar-brand" })
    </div>
    <div class="navbar-collapse collapse">
        <ul class="nav navbar-nav">
            <li>@Html.ActionLink("Coupon Usage", "CouponUsage", "Report", new { area = "Admin" }, new { @class = "nav-link" })</li>
            <li>@Html.ActionLink("Fraud Analysis", "FraudAnalysis", "Report", new { area = "Admin" }, new { @class = "nav-link" })</li>
            <li>@Html.ActionLink("Payment Methods", "PaymentMethod", "Report", new { area = "Admin" }, new { @class = "nav-link" })</li>
            <li>@Html.ActionLink("Payment Status", "PaymentStatus", "Report", new { area = "Admin" }, new { @class = "nav-link" })</li>
            <li>@Html.ActionLink("Regional Sales", "GetRegionalSalesReport", "Report", new { area = "Admin" }, new { @class = "nav-link" })</li>
            <li>@Html.ActionLink("Sales by Date", "SalesByDateRange", "Report", new { area = "Admin" }, new { @class = "nav-link" })</li>
            <li>@Html.ActionLink("Shipment Companies", "ShipmentCompany", "Report", new { area = "Admin" }, new { @class = "nav-link" })</li>
        </ul>
        <ul class="nav navbar-nav">
            <!-- Existing GET links -->
            <li>@Html.ActionLink("Coupon Usage", "CouponUsage", "Report", new { area = "Admin" }, new { @class = "nav-link" })</li>
            <!-- Other existing GET links... -->
            <!-- Converted to POST forms -->
            <li>
                @using (Html.BeginForm("PerformanceSystemReport", "Report", new { area = "Admin" }, FormMethod.Post, new { @class = "nav-form" }))
                {
                <button type="submit" class="nav-link btn btn-link">Performance System</button>
                }
            </li>
            <li>
                @using (Html.BeginForm("FinancialReport", "Report", new { area = "Admin" }, FormMethod.Post, new { @class = "nav-form" }))
                {
                <button type="submit" class="nav-link btn btn-link">Financial Report</button>
                }
            </li>
            <li>
                @using (Html.BeginForm("FraudRiskReport", "Report", new { area = "Admin" }, FormMethod.Post, new { @class = "nav-form" }))
                {
                <button type="submit" class="nav-link btn btn-link">Fraud Risk</button>
                }
            </li>
            <li>
                @using (Html.BeginForm("OrderVolumeReport", "Report", new { area = "Admin" }, FormMethod.Post, new { @class = "nav-form" }))
                {
                <button type="submit" class="nav-link btn btn-link">Order Volume</button>
                }
            </li>
            <li>
                @using (Html.BeginForm("PaymentTransactionReport", "Report", new { area = "Admin" }, FormMethod.Post, new { @class = "nav-form" }))
                {
                <button type="submit" class="nav-link btn btn-link">Payment Transactions</button>
                }
            </li>
        </ul>
    </div>
</div>

<div class="container body-content">
    <h2>@ViewBag.Title</h2>
    <p>Select a report from the navigation above to view detailed analytics.</p>

    <!-- You can add dashboard widgets or summary information here -->
    <div class="row">
        <div class="col-md-4">
            <div class="panel panel-default">
                <div class="panel-heading">Quick Links</div>
                <div class="panel-body">
                    <ul class="list-unstyled">
                        <li>
                            @Html.ActionLink("Today's Sales", "SalesByDateRange", "Report",
                        new
                                 {
                            area = "Admin",
                            startDate = DateTime.Today.ToString("yyyy-MM-dd"),
                            endDate = DateTime.Today.ToString("yyyy-MM-dd")
                        }, new { @class = "nav-link" })
                        </li>
                        <li>
                            @Html.ActionLink("This Month's Sales", "SalesByDateRange", "Report",
                        new
                                 {
                            area = "Admin",
                            startDate = new DateTime(DateTime.Today.Year, DateTime.Today.Month, 1).ToString("yyyy-MM-dd"),
                            endDate = DateTime.Today.ToString("yyyy-MM-dd")
                        }, new { @class = "nav-link" })
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>