@model System.Data.DataTable
@{
    ViewBag.Title = "Payment Method Report";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h2>@ViewBag.Title</h2>

    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Card Type</th>
                    <th>Card Association</th>
                    <th>Installment</th>
                    <th>Order Count</th>
                    <th>Total Amount</th>
                    <th>Currency</th>
                </tr>
            </thead>
            <tbody>
                @foreach (System.Data.DataRow row in Model.Rows)
                {
                <tr>
                    <td>@row["CardType"]</td>
                    <td>@row["CardAssociation"]</td>
                    <td>@row["Installment"]</td>
                    <td>@row["OrderCount"]</td>
                    <td>@string.Format("{0:C}", row["TotalAmount"])</td>
                    <td>@row["Currency"]</td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>